{
    "compilerOptions": {
        "sourceMap": true,
        "strict": false,
        // "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "/@/*": ["src/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "jest", "node"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "plugins": [
            { "name": "@vuedx/typescript-plugin-vue" }
        ]
    },
    "include": [
        "**/*.ts", "**/*.d.ts", "**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
